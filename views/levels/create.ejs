<!-- Modal untuk Add Levels -->
<div class="modal fade" id="addLevelModal" tabindex="-1" aria-labelledby="addLevelModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <div class="w-100 text-center">
                <h5 class="modal-title" id="addLevelModalLabel" style="color:#750B0D;"><strong>Add New Level</strong></h5>             
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>          
        </div>
        
        <div class="modal-body">
           
            <form action="/levels" method="POST" class="validated-form" >
                <div class="mb-3">
                    <label class="form-label">Nama Level</label>
                    <input type="text" name="level[name]" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Sport Category</label>
                    <input type="text" name="level[sportCategory]" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Min Point</label>
                    <input type="number" name="level[minPoints]" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Max Point</label>
                    <input type="number" name="level[maxPoints]" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Lencana (Upload Gambar)</label>
                    <input type="file" name="level[badgeImage]" class="form-control" accept="image/*" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Status</label>
                    <select name="level[isActive]" class="form-control">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Save Level</button>
            </form>
        </div>
    </div>
  </div>
  